{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"files": {
		"ignore": ["./node_modules/**/*", "./dist/**/*", "./public/**/*", "typings.ts"]
	},
	"formatter": {
		"indentStyle": "tab",
		"indentSize": 4,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"complexity": {
				"noExtraBooleanCast": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	}
}
